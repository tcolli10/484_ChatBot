// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// model for chatbot window
model Window {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  content String?
  userId String //for the specific user using the chatbot window
  createdAt DateTime @default(now()) //timestamp is created automatically
  updatedAt DateTime @updatedAt

  @@map("windows")
}
